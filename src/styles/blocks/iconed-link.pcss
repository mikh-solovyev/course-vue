.iconed-link {
    @include color($link);
    font-size: 18px;
    font-weight: 700;
    text-decoration: none;
    display: flex;
    align-items: center;

    &:hover {
        text-decoration: underline;
    }

    &__pic {
        width: 20px;
        height: 20px;
        fill: $link;
        margin-right: 16px;
    }
}
