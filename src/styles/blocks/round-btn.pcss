.round-btn {
    width: 53px;
    height: 53px;
    border-radius: 50%;
    border: 1px solid $white;
    background: transparent;
    position: relative;
    padding: 0;

    &--direction--right {
        &::before {
            position: relative;
            top: 1px;
            left: 2px;
            content: svg-load('next.svg', fill=$text-color, width=10px, height=17px);
        }
    }

    &--direction--left {
        &::before {
            position: relative;
            top: 1px;
            content: svg-load('prev.svg', fill=$text-color, width=10px, height=17px);
        }
    }
}
