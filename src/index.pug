extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container
        header.header
          a.logo(href="#") BA
          nav.menu
            - const menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
            ul.menu__list
              each item in menuItems
                li.menu__item
                  a(href="#").menu__link #{item}
          ul.socials
            - const socialsList = ["insta", "github", "vk", "envelope"];
            each item in socialsList
              li.socials__item
                a(href="#" target="_blank").socials__link
                  +icon(item, "socials__icon")
          .hamburger__open
        .userInfo
          .userInfo__title Личный сайт #[br] веб разработчика
          h1.userInfo__name Михаил Соловьев
        .hero__bottom-buttons
          .scroll-down
            button.scroll-down__btn Скролл
              +icon('scroll', 'scroll-down__icon')
    section.about
      .container.about__container
        .about__user
          .user
            .user__avatar
              .user__avatar-style
                +image("content/user.jpg", "user__avatar-pic")
              -
                const userInfo = [
                  ["Проживаю", "Москва"],
                  ["Возраст", "33 года"],
                  ["Родился", "24 мая 1988"],
                ];
            table.user__data
              each item in userInfo
                tr.user__data-row
                  td.user__data-title #{item[0]}
                  td.user__data-content #{item[1]}
        .about__content
          .about__desc Привет, меня зовут
          h2.about__title Михаил Соловьев
          .about__text-info
            p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
          .about__ps
            | Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
            | Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
  section.values
    .container.values__container
      .values__title
        h3.values__title-text Чем я могу быть полезен вам
        .values__content
          p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
            | Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
      .values__widget
        #skills-component
  section.works
    .container.works__container
      h2.section-title.section-title--type--dark.section-title--in--works Мои работы
      .works__content
        #works-component
  section.reviews
    .container
      #slider-component
  footer.footer
    .container.footer__container
      .footer__info
        .footer__copyright
          .copyright &copy; 2021
        .footer__userinfo
          .footer__userInfo-title Михаил Соловьев
          .footer__userInfo-desc Личный сайт веб-разработчика
      .footer__right
        .footer__navigation
          nav.menu.menu--footer
            ul.menu__list
              each item in menuItems
                li.menu__item
                  a(href="#").menu__link #{item}
        .footer__row
          .footer__col
            .footer__text Этот сайт я сделал в рамках обучения в #[br] Школе онлайн образования Loftschool
            .footer__socials
              ul.socials.socials--footer
                each item in socialsList
                  li.socials__item
                    a(href="#" target="_blank").socials__link
                      +icon(item, "socials__icon")
          .footer__col
            .footer__slogan
              .slogan
                .slogan__text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                .slogan__author Martin Golding
  .hamburger
    .hamburger__left-block
      .container
        header.header
          a.logo(href="#") BA
    .hamburger__right-block
      .hamburger__close
        +icon("close", "hamburger__close-icon")
      .container
        nav.menu.menu--hamburger
          ul.menu__list
            - const menuItemsHamburger = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы"];
            each item in menuItemsHamburger
              li.menu__item
                a(href="#").menu__link #{item}
        ul.socials.socials--hamburger
          each item in socialsList
            li.socials__item
              a(href="#" target="_blank").socials__link
                +icon(item, "socials__icon")
