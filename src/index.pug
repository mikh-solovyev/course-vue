extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container
        header.header
          a.logo(href="#") BA
          nav.menu
            - const menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
            ul.menu__list
              each item in menuItems
                li.menu__item
                  a(href="#").menu__link #{item}
          ul.socials
            - const socialsList = ["insta", "github", "vk", "envelope"];
            each item in socialsList
              li.socials__item
                a(href="#" target="_blank").socials__link
                  +icon(item, "socials__icon")
        .userInfo
          .userInfo__title Личный сайт #[br] веб разработчика
          h1.userInfo__name Владимир Астаханов
        .hero__bottom-buttons
          .scroll-down
            button.scroll-down__btn Скролл
              +icon('scroll', 'scroll-down__icon')
    section.about
      .container.about__container
        .about__user
          .user
            .user__avatar
              .user__avatar-style
                +image("content/user.jpg", "user__avatar-pic")
              -
                const userInfo = [
                  ["Проживаю", "Новосибирск"],
                  ["Возраст", "27 лет"],
                  ["Родился", "1 января 1970"],
                ];
            table.user__data
              each item in userInfo
                tr.user__data-row
                  td.user__data-title #{item[0]}
                  td.user__data-content #{item[1]}
        .about__content
          .about__desc Привет, меня зовут
          h2.about__title Владимир Астаханов
          .about__text-info
            p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
          .about__ps
            | Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
            | Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
  section.values
    .container.values__container
      .values__title
        h3.values__title-text Чем я могу быть полезен вам
        .values__content
          p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
            | Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
      .values__widget
        -
          const skillsCategories = [
            ["Front-end", ["HTML", "CSS", "javascript", "Vue"]],
            ["Workflow", ["GIT", "Terminal", "Gulp", "Webpack"]],
          ];
        ul.skills
          each category in skillsCategories
            li.skills__item
              .skills-row
                .skills-row__title #{category[0]}
                ul.skills-row__list
                  each skill in category[1]
                    li.skills-row__item
                      .skill
                        svg(viewbox="0 0 100 100").skill__circle-share
                          circle(cx="50" cy="50" r="40").skill__circle.skill__circle--layer--under
                          circle(cx="50" cy="50" r="40" stroke="url(#gradient)" transform="rotate(180 50 50)").skill__circle.skill__circle--layer--above
                          linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
                            stop(offset="0%" stop-color="#D0731B")
                            stop(offset="100%" stop-color="#DC9322")
                        .skill__title #{skill}
  section.works
    .container
      h2.section-title.section-title--type--dark.section-title--in--works Мои работы
      .works__content
        .works-preview
          .works-preview__pictures(data-slide="2")
            +image("content/slider/slider-1.jpg", "works-preview__image")
            .works-preview__thumbs
              ul.thumbs
                - for(var i = 1; i <= 4; i++)
                  li.thumbs__item(class= i === 1 ? "thumbs__item--active" : "")
                    a(href="#").thumbs__link
                      +image(`content/slider/slider-${i}.jpg`, "thumbs__pic")
            .works-preview__btns
              .square-btns
                button(type="button").square-btns__item.square-btns__item--next
                button(type="button").square-btns__item.square-btns__item--prev
          .works-preview__info
            ul.tags
              - const tags = ["HTML", "CSS", "JavaScript"];
              each item in tags
                li.tags__item
                  .tag #{item}
            h3.works-preview__title Сайт школы #[br] образования
            .works-preview__desc
              p Этот парень проходил обучение #[br] веб-разработке не где-то, а в LoftSchool! #[br]
                | 2 месяца только самых тяжелых #[br] испытаний и бессонных ночей!
            a(href="#").iconed-link
              +icon(`link`, "iconed-link__pic")
              span.iconed-link__text Просмотреть сайт
  section.reviews
    .container
      .slider
        .slider__header
          h2.section-title Что обо мне говорят
          .slider__buttons
            button(type="button").slider__btn.round-btn.round-btn--direction--left
            button(type="button").slider__btn.round-btn.round-btn--direction--right
        ul.slider__content
          li.slider__item
            .review
              .review__text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей!
              .review__user
                .user-display
                  .user-display__avatar
                    .user-display__avatar-style
                      +image("content/reviews/dmitriy.png", "user-display__pic")
                  .user-display__data
                    .user-display__name Ковальчук митрий
                    .user-display__position Основатель Loftschool
          li.slider__item
            .review
              .review__text Этот код выдержит любые испытания. Только пожалуйста, не загружайте сайт на слишком старых браузерах
              .review__user
                .user-display
                  .user-display__avatar
                    .user-display__avatar-style
                      +image("content/reviews/vladimir.png", "user-display__pic")
                  .user-display__data
                      .user-display__name Владимир Сабанцев
                      .user-display__position Преподаватель
  footer.footer
    .container.footer__container
      .footer__info
        .footer__copyright
          .copyright &copy; 2021
        .footer__userinfo
          .footer__userInfo-title Владимир #[br] Астаханов
          .footer__userInfo-desc Личный сайт #[br] веб-разработчика
      .footer__navigation
        nav.menu.menu--footer
          ul.menu__list
            each item in menuItems
              li.menu__item
                a(href="#").menu__link #{item}
        .footer__text Этот сайт я сделал в рамках обучения в #[br] Школе онлайн образования Loftschool
        .footer__socials
          ul.socials.socials--footer
            each item in socialsList
              li.socials__item
                a(href="#" target="_blank").socials__link
                  +icon(item, "socials__icon")
      .footer__slogan
        .slogan
          .slogan__text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
          .slogan__author Martin Golding
