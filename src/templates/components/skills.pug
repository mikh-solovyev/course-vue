template#skills-list
    ul.skills
        li.skills__item(v-for="section in skillsData" :key="section.id")
            skills-row(
                :section="section"
            )

template#skills-row
    .skills-row
        .skills-row__title {{section.category}}
        ul.skills-row__list
            li.skills-row__item(v-for="skill in section.skills" :key="skill.id")
                skills-item(
                    :skill="skill"
                )

template#skills-item
    .skill
        svg(viewbox="0 0 100 100").skill__circle-share
            circle(cx="50" cy="50" r="40").skill__circle.skill__circle--layer--under
            circle(cx="50" cy="50" r="40" ref="colored-circle" stroke="url(#gradient)" transform="rotate(180 50 50)").skill__circle.skill__circle--layer--above
            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
                stop(offset="0%" stop-color="#D0731B")
                stop(offset="100%" stop-color="#DC9322")
        .skill__title {{skill.title}}




